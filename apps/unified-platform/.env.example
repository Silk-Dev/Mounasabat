# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Redis Cache (optional - if not provided, caching will be disabled)
REDIS_URL="redis://localhost:6379"

# Authentication
BETTER_AUTH_SECRET="your-secret-key-here"
BETTER_AUTH_URL="http://localhost:3000"

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (for notifications)
EMAIL_FROM="noreply@yourapp.com"
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT="587"
EMAIL_SMTP_USER="your-email@gmail.com"
EMAIL_SMTP_PASS="your-app-password"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760" # 10MB in bytes

# Security Configuration
ENCRYPTION_MASTER_KEY="your-256-bit-encryption-key-here-must-be-32-chars-long"
ENCRYPTION_SALT="your-encryption-salt-here-must-be-unique"

# Rate Limiting
RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Security Headers
CSP_REPORT_URI="https://yourdomain.com/api/security/csp-report"

# Audit Logging
AUDIT_LOG_LEVEL="info"
AUDIT_LOG_RETENTION_DAYS="2555"  # 7 years

# External Services
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
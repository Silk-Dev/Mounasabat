{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["AUTH_SECRET", "NEXTAUTH_SECRET", "NEXTAUTH_URL", "STRIPE_SECRET_KEY"]
    },
    "@mounasabet/ui#build": {
      "outputs": ["**/*.d.ts"]
    },
    "@mounasabet/database#db:generate": {
      "outputs": ["src/generated/**"]
    },
    "@mounasabet/client#build": {
      "dependsOn": ["@mounasabet/ui#build"],
      "outputs": ["dist/**"]
    },
    "@mounasabet/admin#build": {
      "dependsOn": ["@mounasabet/database#db:generate", "@mounasabet/ui#build"],
      "outputs": ["dist/**"]
    }
  }
}
